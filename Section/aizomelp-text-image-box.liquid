<style>
.id_{{ section.id }}{
  padding:80px 0px;
  background-image:url({{section.settings.bg_img | image_url}});
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;  
  position: relative;
  }
 .id_{{ section.id }}::after{
    content: "";
    position: absolute;
    width:100%;
    height:100%;
    top:0;
    left:0;
    background-color:#000000;
    opacity: 30%;
    z-index:0;
 }   
.id_{{ section.id }} .container{
    max-width:1200px;
    width:100%;
    margin:0px auto;
    position: relative;
    z-index:1;
}

.id_{{ section.id }} .container .row{
    display:flex;
    flex-wrap:wrap;
    margin:-10px;
}
.id_{{ section.id }} .container .row .col{
    max-width:33.33%;
    width:100%;
    box-sizing: border-box;
    padding:10px;
}
.id_{{ section.id }} .single_box{
    height:100%;
    display:flex;
  flex-direction: column;
}

.id_{{ section.id }} .single_box h2{
    font-size: 28px;
    line-height: 130%;
    font-style: italic;
    font-weight: 400;
    color: #ffffff;
    margin:0px 0px 10px 0px;
    text-align: center;
}   
    
.id_{{ section.id }} .single_box img{
    max-width:100%;
    object-fit: contain;
    height:30px;
    margin-top:auto;
}  
    
@media(max-width:768px){

.id_{{ section.id }}{
   padding:40px 20px;
    }

  .id_{{ section.id }} .container .row{
    margin:0px;
    gap:40px;
  }

.id_{{ section.id }} .container .row .col{
    max-width:100%;
    padding:0px;
}

  
}    

</style>

<section class="id_{{ section.id }}">

  <div class="container">
    <div class="row">
       {% for block in section.blocks %}
            {% case block.type %}
                  {% when "box" %}
                    <div class="col">
                      <div class="single_box">
                           <h2>{{ block.settings.title }}</h2>
                           {% if block.settings.img != blank %}
                              <img src="{{ block.settings.img | image_url }}" alt="{{ block.settings.img.alt }}" width="100%" height="100%">
                           {% endif %}
                      </div>
                    </div>
            {% endcase %}
       {% endfor %}
      </div>
  </div>

  
</section>













{% schema %}
  {
    "name": "Aizomelp Text Image Box",
    "settings": [
      {
        "type": "image_picker",
        "label": "Select Backgroung Image",
        "id": "bg_img"
      }
    ],
    "blocks": [
      {
        "type": "box",
        "name":"List Box",
        "settings": [
          {
            "type": "text",
            "label": "Title",
            "id": "title",
            "default":"The answer to your skin issues!"
          },
          {
            "type": "image_picker",
            "label": "Select Image",
            "id": "img"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Aizomelp Text Image Box",
        "blocks": [
          {
              "type": "box",
          },
          {
              "type": "box",
          },
          {
              "type": "box",
          }
        ]
      }
    ]
  }
{% endschema %}









