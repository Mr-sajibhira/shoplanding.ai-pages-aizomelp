<style>
.id_{{ section.id }}{
  padding:80px 0px;
  background-image:url({{section.settings.bg_img | image_url}});
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;  
  position: relative;
  }
    
 .id_{{ section.id }}::after{
    content: "";
    position: absolute;
    width:100%;
    height:100%;
    top:0;
    left:0;
    background-color:#000000;
    opacity: 30%;
    z-index:0;
 }   
.id_{{ section.id }} .container{
    max-width:1200px;
    width:100%;
    margin:0px auto;
    position: relative;
    z-index:1;
}


    
.id_{{ section.id }} .title{
     font-size: 36px;
    line-height: 130%;
    font-weight: 500;
    color: #ffffff;
    margin:0px 0px 40px 0px;
    text-align: center; 
}
  
.id_{{ section.id }}  img{
  max-width:60px;
  width:100%;
  display:block;
  aspect-ratio: 1/1;
  object-fit: cover;
  margin:0px auto 0px auto;
}
.footer_div_aizomelp{
    height:100px;
    background-color:#ffffff;
}


@media(max-width:768px){
  
 .id_{{ section.id }}{
   padding:40px 20px;
 }
  


.id_{{ section.id }} .title{
     font-size: 30px;
    margin:0px 0px 30px 0px;
}
.footer_div_aizomelp{
    height:60px;
    background-color:#ffffff;
}
  
}
  
</style>

<section class="id_{{ section.id }}">
  <div class="container">
    <h2 class="title">{{ section.settings.title }}</h2>
    
    {% if section.settings.img != blank %}
      <img src="{{ section.settings.img | image_url }}" alt="{{ section.settings.img.alt }}" width="100%" height="100%">
    {% endif %}

    
    
  </div>
</section>
<div class="footer_div_aizomelp">
  
</div>




{% schema %}
  {
    "name": "Aizomelp Footer",
    "settings": [
            {
        "type": "image_picker",
        "label": "Select Backgroung Image",
        "id": "bg_img"
      },
      {
        "type": "text",
        "label": "Section Title",
        "id": "title",
        "default":"Experience Tranquility Every Night"
      },
       {
         "type": "image_picker",
         "label": "Select Image",
         "id": "img"
          }
    ],
    "presets": [
      {
        "name": "Aizomelp Footer"
      }
    ]
  }
{% endschema %}