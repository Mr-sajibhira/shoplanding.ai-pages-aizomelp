<style>
.id_{{ section.id }}{
  padding:80px 0px;
  background-color:#555555;

  }
   
.id_{{ section.id }} .container{
    max-width:1200px;
    width:100%;
    margin:0px auto;
}

.id_{{ section.id }} .container .row{
    display:flex;
    flex-wrap:wrap;
    margin:-20px;
  align-items: center;
}
.id_{{ section.id }} .container .row .col{
    max-width:50%;
    width:100%;
    box-sizing: border-box;
    padding:20px;
}

.id_{{ section.id }} img{
    max-width:100%;
    object-fit: cover;
    display:block;
} 

.id_{{ section.id }} .content h2{
    font-size: 30px;
    line-height: 130%;
    font-weight: 600;
    color: #ffffff;
    margin:0px 0px 20px 0px;
}  
  
.id_{{ section.id }} .content p{
    font-size: 18px;
    line-height: 150%;
    font-weight: 400;
    color: #ffffff;
    margin:0px 0px 0px 0px;
}    
 
    
@media(max-width:768px){

.id_{{ section.id }}{
   padding:40px 20px;
    }

  .id_{{ section.id }} .container .row{
    margin:0px;
    gap:30px;
  }

.id_{{ section.id }} .container .row .col{
    max-width:100%;
    padding:0px;
}

  .id_{{ section.id }} .content h2{
    font-size: 25px;
    margin:0px 0px 15px 0px;
     text-align: center;
}  
  
.id_{{ section.id }} .content p{
    font-size: 16px;
   text-align: center;

}  

  
}    

</style>

<section class="id_{{ section.id }}">

  <div class="container">
    <div class="row">
       {% for block in section.blocks %}
            {% case block.type %}
                  {% when "image" %}
                    <div class="col">
                           {% if block.settings.img != blank %}
                              <img style="aspect-ratio:{{ block.settings.aspect-ratio }};" src="{{ block.settings.img | image_url }}" alt="{{ block.settings.img.alt }}" width="100%" height="100%">
                           {% endif %}
                      </div>
                  {% when "content" %}
                  <div class="col">
                    <div class="content">
                      <h2>{{ block.settings.title }}</h2>
                      <p>{{ block.settings.des }}</p>
                    </div>
                
                  </div>
            {% endcase %}
       {% endfor %}
      </div>
  </div>

  
</section>


{% schema %}
  {
    "name": "Aizomelp Text Img Banner",
    "settings": [],
    "blocks": [
      {
        "type": "image",
        "name":"Image",
        "limit": 1,
        "settings": [
          {
            "type": "image_picker",
            "label": "Select Image",
            "id": "img"
          },
          {
            "type": "text",
            "label": "Aspect Ratio",
            "id": "aspect-ratio",
            "default":"8/8"
          }
        ]
      },
      {
        "type": "content",
        "name":"Content",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "label": "Title",
            "id": "title",
            "default":"Increased Wellness, Timeless Beauty"
          },
          {
            "type": "textarea",
            "label": "Description",
            "id": "des",
            "default":"Discover the profound connection between wellness and indigo fabrics. Indigo's natural properties promote better sleep, relaxation, and overall tranquility, enhancing your well-being with every touch. Explore our collection to experience the benefits of indigo-dyed textiles in your daily life."
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Aizomelp Text Img Banner",
        "blocks": [
          {
            "type": "content"
          },
          {
            "type": "image"
          }
        ]
      }
    ]
    
  }
{% endschema %}















