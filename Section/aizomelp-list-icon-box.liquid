
<style>
 .id_{{ section.id }}{
   padding:50px 0px;
   background-color:#555555;
 }
.id_{{ section.id }} .container{
    max-width:1200px;
    width:100%;
    margin:0px auto;
}
.id_{{ section.id }} .list_box{
  display:flex;
  flex-wrap:wrap;
  margin:-20px;
}
.id_{{ section.id }} .list_box .list{
  max-width:33.33%;
  width:100%;
  box-sizing: border-box;
  padding:20px;
  text-align: center;
}
.id_{{ section.id }} .list_box .list h3{
    font-size: 30px;
    line-height: 100%;
    font-weight: 400;
    color: #ffffff;
    margin:0px 0px 0px 0px;
}
.id_{{ section.id }} .list_box .list h2{
      font-size: 35px;
    line-height: 120%;
    font-weight: 400;
    color: #ffffff;
    margin:0px 0px 0px 0px;
}
  
.id_{{ section.id }} .icon_list{
  display:flex;
  flex-wrap:wrap;
  padding:20px 0px 0px 0px;
}
  
.id_{{ section.id }} .icon_list .list{
  max-width:20%;
  width:100%;
  box-sizing: border-box;
}
.id_{{ section.id }} .icon_list .list img{
  max-width:10px;
  width:100%;
  height:10px;
  display:block;
  margin:0px auto 15px;
}
  
.id_{{ section.id }} .icon_list .list p{
    font-size: 18px;
    line-height: 150%;
    font-weight: 400;
    color: #ffffff;
    margin:0px 0px 0px 0px;
    text-align: center;
 } 

.id_{{ section.id }} .line_class{
  display:block;
  width:80%;
  height:1px;
  background-color:#e5e7eb;
  margin:30px auto 0px auto;
}
  
@media(max-width:768px){
  
.id_{{ section.id }}{ padding:40px 20px;}
.id_{{ section.id }} .list_box .list h3{font-size: 25px;}
.id_{{ section.id }} .list_box .list h2{ font-size: 30px;}
.id_{{ section.id }} .list_box .list{ max-width:100%;}
.id_{{ section.id }} .icon_list .list{ max-width:100%;}
.id_{{ section.id }} .line_class{ width:100%;}
.id_{{ section.id }} .icon_list{
  margin:30px 0px 0px 0px;
  gap:25px;
}

.id_{{ section.id }} .icon_list .list img{
  max-width:20px;
  width:100%;
  height:20px;
  display:block;
  margin:0px auto 10px;
}
.id_{{ section.id }} .icon_list .list p{
    font-size: 20px;
 } 

  
}
  
</style>


<section class="id_{{ section.id }}">
  <div class="container">
     {% for block in section.blocks %}
      {% case block.type %}
         {% when 'list_box' %}
            <div class="list_box">
               <div class="list"> <h3>{{ block.settings.number1 }}</h3><h2>{{ block.settings.text1 }}</h2> </div>
               <div class="list"> <h3>{{ block.settings.number2 }}</h3><h2>{{ block.settings.text2 }}</h2> </div>
               <div class="list"> <h3>{{ block.settings.number3 }}</h3><h2>{{ block.settings.text3 }}</h2> </div>
            </div>
        {% when 'icon_list' %}
            <div class="line_class"></div>
           <div class="icon_list">
             <div class="list">
               {% if block.settings.icon != blank %}
                 <img src="{{ block.settings.icon | image_url }}" alt="{{ block.settings.icon.alt }}" width="100%" height="100%">
               {% endif %}
               <p>{{ block.settings.text1 }}</p>
             </div>
             <div class="list">
               {% if block.settings.icon != blank %}
                 <img src="{{ block.settings.icon | image_url }}" alt="{{ block.settings.icon.alt }}" width="100%" height="100%">
               {% endif %}
               <p>{{ block.settings.text2 }}</p>
             </div>
              <div class="list">
               {% if block.settings.icon != blank %}
                 <img src="{{ block.settings.icon | image_url }}" alt="{{ block.settings.icon.alt }}" width="100%" height="100%">
               {% endif %}
               <p>{{ block.settings.text3 }}</p>
             </div>
              <div class="list">
               {% if block.settings.icon != blank %}
                 <img src="{{ block.settings.icon | image_url }}" alt="{{ block.settings.icon.alt }}" width="100%" height="100%">
               {% endif %}
               <p>{{ block.settings.text4 }}</p>
             </div>
              <div class="list">
               {% if block.settings.icon != blank %}
                 <img src="{{ block.settings.icon | image_url }}" alt="{{ block.settings.icon.alt }}" width="100%" height="100%">
               {% endif %}
               <p>{{ block.settings.text5 }}</p>
             </div>
           </div>
        
        {% endcase %}
    {% endfor %}
  </div>
</section>


